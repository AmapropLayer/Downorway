{

    "manifest_version": 2,
    "name": "Downorway",
    "version": "1.0",
  
    "description": "Downloads files from norwegianclass101",
  
    "icons": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },

    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "downloads"
    ],

    "browser_action": {
        "default_icon":"icons/icon.svg",
        "default_title": "Downorway"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.norwegianclass101.com/lesson/*"],
            "js": ["downorway.js"]
        }
    ]

  
  }